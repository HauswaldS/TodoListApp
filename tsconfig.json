{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "filesGlob": [
    "client/**/*.ts",
    "server/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "collections"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "client/app.component.ts",
    "client/imports/dashboard/dashboard.component.ts",
    "client/imports/login/login.component.ts",
    "typings/dossier.d.ts",
    "typings/globals/es6-shim/index.d.ts",
    "typings/globals/meteor/index.d.ts",
    "typings/index.d.ts",
    "typings/modules/es6-promise/index.d.ts",
    "typings/tache.d.ts",
    "typings/user.d.ts"
  ]
}
